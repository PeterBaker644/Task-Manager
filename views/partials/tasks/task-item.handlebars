<li class="list-group-item d-flex justify-content-between align-items-start px-3">
    {{body}}
    <div class="btn-group ml-2" role="group" aria-label="First group">
        <button type="button" class="btn btn-outline-primary btn-sm complete" data-id="{{id}}">
            <i class="far fa-check-circle"></i>
        </button>
        <button type="button" class="btn btn-primary btn-sm delete" data-id="{{id}}">
            <i class="far fa-times-circle"></i>
        </button>
    </div>
</li>